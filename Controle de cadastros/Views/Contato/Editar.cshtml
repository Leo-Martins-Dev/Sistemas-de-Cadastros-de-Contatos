@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-5">Editar contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
    </div>
    <div class="mb-3">
        <label for="celular" class="form-label">Número</label>
        <input type="text" class="form-control" placeholder="Digite o número do contato">
    </div>
    <button type="submit" class="btn-lg btn-success">Alterar</button>
    <a class="btn-lg btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
